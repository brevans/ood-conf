---
batch_connect:
  template: vnc
script:
  native: [ "--ntasks-per-node", "<%= bc_num_cores.to_i %>", 
            "--mem",             "<%= bc_amt_mem.to_i %>G" , 
            "--nodes",           "<%= bc_num_slots.to_i %>",
            "--partition",       "<%= bc_queue %>"         ,
            <% if num_gpu.to_i > 0 then %>
            "--gres",            "gpu:<%= num_gpu.to_i %>" , 
            <% end %>
          ]
